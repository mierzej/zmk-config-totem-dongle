#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

#define BASE 0
#define NAV  1
#define SYM  2
#define ADJ  3
#define TVP1 4
#define TVP2 5

&mt {
    quick-tap-ms = <(-1)>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <250>;
    require-prior-idle-ms = <200>;
};

&sl { release-after-ms = <200>; };

/ {
    combos {
        compatible = "zmk,combos";

        srednik {
            bindings = <&kp SEMICOLON>;
            key-positions = <28 29>;
            layers = <0>;
        };

        closer_braket {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <27 28>;
            layers = <2>;
        };

        or {
            bindings = <&kp PIPE>;
            key-positions = <7 8>;
            layers = <2>;
        };

        nawias_ostry {
            bindings = <&kp LESS_THAN>;
            key-positions = <17 18>;
            layers = <2>;
        };

        open_bracket {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <16 17>;
            layers = <2>;
        };

        dwukropek {
            bindings = <&kp COLON>;
            key-positions = <28 29>;
            layers = <2>;
        };

        quote {
            bindings = <&kp SINGLE_QUOTE>;
            key-positions = <12 13>;
            layers = <2>;
        };

        quote_weard {
            bindings = <&kp GRAVE>;
            key-positions = <23 24>;
            layers = <2>;
        };

        backsplash {
            bindings = <&kp BACKSLASH>;
            key-positions = <29 30>;
            layers = <2>;
        };
    };

    macros {
        gif: gif {
            label = "giphy";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp N2>,
                <&macro_release>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp G &kp I &kp F>;
        };
    };

    behaviors {
        cfmod: cfmod {
            compatible = "zmk,behavior-hold-tap";
            label = "Custom fast mod";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            quick-tap-ms = <(-1)>;
            require-prior-idle-ms = <(-1)>;
            tapping-term-ms = <180>;
            hold-while-undecided;
        };

        cflt: cflt {
            compatible = "zmk,behavior-hold-tap";
            label = "custom fast layer tap";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            quick-tap-ms = <(-1)>;
            require-prior-idle-ms = <(-1)>;
            tapping-term-ms = <180>;
        };
